<main>
  <h1>Edit News</h1>
  <form action="/news/{{_id}}?_method=PUT" method="POST">
    <div>
      <input
        type="text"
        id="title"
        name="title"
        value="{{title}}"
        placeholder="Enter news title"
        required
      />
    </div>
    <div>
      <textarea
        id="content"
        name="content"
        placeholder="Enter news content"
        required
      >{{content}}</textarea>
    </div>
    <div>
      <input
        type="text"
        id="author"
        name="author"
        value="{{author}}"
        placeholder="Enter author name"
        required
      />
    </div>
    <div>
      <input
        type="url"
        id="weblink"
        name="weblink"
        value="{{weblink}}"
        placeholder="Enter a valid URL"
        required
      />
    </div>
    <button type="submit">Save</button>
  </form>
</main>